rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow reading other users for group features
    }
    
    // Listings collection
    match /listings/{listingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.uid == resource.data.farmerId;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.farmerId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hub']);
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.farmerId;
    }
    
    // Groups collection
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.uid in resource.data.farmerIds || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hub']);
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.retailerId || 
         request.auth.uid in resource.data.farmerIds ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hub']);
      allow create: if request.auth != null && 
        request.auth.uid == resource.data.retailerId;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.retailerId || 
         request.auth.uid in resource.data.farmerIds ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hub']);
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Mandi prices collection (read-only for all authenticated users)
    match /mandiPrices/{priceId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hub'];
    }
    
    // Hubs collection
    match /hubs/{hubId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hub'];
    }
    
    // Verifications collection
    match /verifications/{verificationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hub'];
    }
  }
}